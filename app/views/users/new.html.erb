<h2 class="text-center">Inscription</h2>

<%= form_with model: @user, url: signup_path, local: true, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control", required: true, placeholder: "Votre identifiant" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true, placeholder: "Votre email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true, placeholder: "Votre mot de passe" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Confirmer le mot de passe" %>
  </div>

  <%= f.submit "S'inscrire", class: "btn btn-primary w-100" %>
<% end %>

<p class="text-center mt-3">Déjà inscrit? <%= link_to "Se connecter", login_path %></p>
