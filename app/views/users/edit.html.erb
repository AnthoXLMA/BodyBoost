<h2 class="mb-4">Modifier mon profil</h2>

<%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>

  <div class="mb-3">
    <%= form.label :height, "Taille (en cm)" %>
    <%= form.number_field :height, class: "form-control", min: 50, max: 250 %>
  </div>

  <div class="mb-3">
    <%= form.label :weight, "Poids (en kg)" %>
    <%= form.number_field :weight, class: "form-control", min: 20, max: 300 %>
  </div>

  <%= form.submit "Mettre Ã  jour", class: "btn btn-primary" %>
<% end %>
