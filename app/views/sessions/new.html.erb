<h2 class="text-center">Connexion</h2>

<%= form_with url: login_path, local: true, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true, placeholder: "Votre email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true, placeholder: "Votre mot de passe" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
  </div>

  <%= f.submit "Se connecter", class: "btn btn-primary w-100" %>
<% end %>

<p class="text-center mt-3">Pas encore inscrit? <%= link_to "S'inscrire", signup_path %></p>
